{
  "name": "lottery",
  "version": "1.0.0",
  "description": "A lottery application built with Vue 3 and Vite",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh": "cross-env VITE_PROJECT_NAME=lottery-dapp vite build",
