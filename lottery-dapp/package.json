    "@ethersproject/providers": "^5.8.0",
    "ant-design-vue": "^4.2.6",
    "vue": "^3.5.13",
    "vue-i18n": "^9.14.4",
    "vue-router": "^4.5.1",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "unplugin-vue-components": "^28.7.0",
    "vite": "^6.3.5"
  },
